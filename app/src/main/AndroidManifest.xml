<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.peter.myhome">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Maintenance.MaintenanceActivity" />
        <activity
            android:name=".PaymentActivity"
            android:label="MyHome Payment" />
        <activity
            android:name=".PaymentCardActivity"
            android:label="Payment"
            android:parentActivityName=".PaymentActivity" />
        <activity
            android:name=".PaymentPaypalActivity"
            android:label="Payment"
            android:parentActivityName=".PaymentActivity" />
        <activity
            android:name=".PaymentConfirm"
            android:label="Payment"
            android:parentActivityName=".PaymentActivity" />
        <activity
            android:name=".ReviewActivity"
            android:label="@string/title_activity_review"
            android:parentActivityName=".HomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.peter.myhome.HomeActivity" />
        </activity>
        <activity
            android:name=".ReviewHistoryActivity"
            android:label="@string/title_activity_review_history"
            android:parentActivityName=".HomeActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.peter.myhome.HomeActivity" />
        </activity>
        <activity
            android:name=".DatabaseTestingActivity"
            android:label="Testing"
            android:parentActivityName=".PaymentActivity" />
        <activity
            android:name=".SearchActivity"
            android:label="@string/title_activity_search"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SearchDateActivity"
            android:label="@string/title_activity_search_date"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SearchGuestActivity"
            android:label="@string/title_activity_search_guest"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".MessagingMailboxActivity" />
        <activity android:name=".MessagingNewMessageActivity" />
        <activity android:name=".A_jdbcActivity" />
        <activity
            android:name=".Maintenance.NewMaintenanceActivity"
            android:label="Maintenance"
            android:parentActivityName=".Maintenance.MaintenanceActivity" />
        <activity
            android:name=".Maintenance.MaintenanceHistoryActivity"
            android:label="Maintenance"
            android:parentActivityName=".Maintenance.MaintenanceActivity"></activity>
    </application>

</manifest>