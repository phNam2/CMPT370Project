<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.peter.myhome.ReadMessageActivity"
    tools:showIn="@layout/activity_read_message">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/fromLb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="32dp"
            android:text="From: " />

        <TextView
            android:id="@+id/FromDataLb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/SubjectLb"
            android:layout_toEndOf="@+id/SubjectLb"
            android:layout_toRightOf="@+id/SubjectLb"
            android:text="  "
            tools:text="TempText" />

        <TextView
            android:id="@+id/SubjectLb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/fromLb"
            android:layout_alignStart="@+id/fromLb"
            android:layout_below="@+id/fromLb"
            android:text="Subject: " />

        <TextView
            android:id="@+id/SubjectDataLb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/FromDataLb"
            android:layout_toEndOf="@+id/SubjectLb"
            android:layout_toRightOf="@+id/SubjectLb"
            android:text="TempText" />

        <TextView
            android:id="@+id/messageLb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/SubjectLb"
            android:layout_alignStart="@+id/SubjectLb"
            android:layout_below="@+id/SubjectLb"
            android:layout_marginTop="32dp"
            android:text="Message:" />

        <TextView
            android:id="@+id/messageDataLb"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/messageLb"
            android:layout_alignStart="@+id/messageLb"
            android:layout_below="@+id/messageLb"
            android:text="TempText Is a lot of text here just for the purpose of testing what happens here" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
