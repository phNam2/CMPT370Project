<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.peter.myhome.Messaging.MessagingNewMessageActivity"
    tools:showIn="@layout/activity_messaging_new_message">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="368dp"
        android:layout_height="495dp"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/RecipientLb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/RecipientTB"
            android:layout_alignBottom="@+id/RecipientTB"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="29dp"
            android:layout_marginStart="29dp"
            android:text="Recipient" />

        <EditText
            android:id="@+id/RecipientTB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/RecipientLb"
            android:layout_toRightOf="@+id/RecipientLb"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/SubjectLb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/SubjectTB"
            android:layout_alignBottom="@+id/SubjectTB"
            android:layout_alignLeft="@+id/RecipientLb"
            android:layout_alignStart="@+id/RecipientLb"
            android:text="Subject" />

        <EditText
            android:id="@+id/SubjectTB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/RecipientTB"
            android:layout_alignStart="@+id/RecipientTB"
            android:layout_below="@+id/RecipientTB"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/MessageLb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/SubjectTB"
            android:layout_marginTop="11dp"
            android:layout_toLeftOf="@+id/SubjectTB"
            android:layout_toStartOf="@+id/SubjectTB"
            android:text="Message" />

        <EditText
            android:id="@+id/MessageTB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/SubjectTB"
            android:layout_alignLeft="@+id/MessageLb"
            android:layout_alignRight="@+id/SubjectTB"
            android:layout_alignStart="@+id/MessageLb"
            android:layout_below="@+id/MessageLb"
            android:ems="10"
            android:inputType="textMultiLine"
            tools:layout_editor_absoluteX="333dp"
            tools:layout_editor_absoluteY="56dp" />

        <Button
            android:id="@+id/SubmitBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/MessageTB"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/MessageTB"
            android:layout_marginBottom="11dp"
            android:onClick="sendMessage"
            android:text="Submit" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
